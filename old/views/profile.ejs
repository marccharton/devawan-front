<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h2 class="h1 display-4">Mon Compte</h2>
  <p class="lead">Mes informations sur devawan !</p>
</div>

<% if (!user) { %>
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        Vous devez être connecté pour accéder à cette page ! <br>
        <a href="/login" class="alert-link">Se connecter</a>.
    </div>
<% } else { %>

    <div class="profile">
    <div class="form-group mb-5">
        <label class="text-secondary">Nom</label>
        <div class="h2"><%= user.lastname %></div>
    </div>
    <div class="form-group mb-5">
        <label class="text-secondary">Prénom</label>
        <div class="h2"><%= user.firstname %></div>
    </div>
    <div class="form-group mb-5">
        <label class="text-secondary">Email</label>
        <div class="h2"><%= user.email %></div>
    </div>
    <div class="form-group mb-5">
        <label class="text-secondary">Role</label>
        <div class="h2"><%= user.role %></div>
    </div>
    </div>
<%}%>

<%- include('partials/footer') %>